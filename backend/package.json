{
  "name": "workpro-backend",
  "version": "1.0.0",
  "description": "WorkPro CMMS Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --watch --require ./scripts/tsRegister.js src/server.ts",
    "build": "../node_modules/.bin/tsc -p tsconfig.json",

    "start": "node dist/server.js",
    "test": "vitest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node --require ./scripts/tsRegister.js src/scripts/seed.ts",
    "db:reset": "prisma db push --force-reset",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.4",
    "cors": "^2.8.5",
     "dotenv": "^16.3.1",
    "express": "^4.18.2",

    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "mongoose": "^8.18.2",
    "nodemailer": "^6.9.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.0",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}

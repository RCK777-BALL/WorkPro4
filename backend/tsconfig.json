{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/server.ts",
    "src/config/**/*.ts",
    "src/models/**/*.ts",
    "src/routes/authRoutes.ts",
    "src/scripts/**/*.ts",
    "src/lib/**/*.ts"
  ]
}
